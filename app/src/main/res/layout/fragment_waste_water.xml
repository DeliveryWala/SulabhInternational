<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.arif.sulabhinternational.Fragments.WasteWater">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/waste_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="@string/waste"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/water_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waste_head"
        android:background="@drawable/waterwaste"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/water_img"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:padding="10dp"
        android:text="@string/water_detail"/>

</RelativeLayout>
